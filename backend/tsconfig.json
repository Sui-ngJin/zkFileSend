{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
